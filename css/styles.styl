	display: flex;
	min-height: 100vh;
	flex-direction: column;
	padding-left: 295px;
	/*transition: padding 250ms;*/
}


.bin {
	width: 295px;
    position: fixed;
    z-index: 1;
    top: 0;
    bottom: 0;
    left: 0;
    background-color: #2B4956;
    color: #fff;
    padding-top: 2rem;
    overflow-y: auto;
    transition: transform 200ms;

	.bin-content {
		transition: transform 300ms;
	}

	.god-icons {
	    overflow-y: auto;
	    border: none;
	    background: none;
	    box-shadow: none;
	    padding: .5rem 1rem 1rem;
	}

	.title {
		border-bottom-color: #3E606F;
		text-align: center;
		font-size: 1rem;
		color: #469FC5;
	}

	.god-search {
		width: 100%;
	    margin-bottom: 6px;
	    border: 1px solid #598CA2;
	    background-color: transparent;

		&:focus {
			 border: 1px solid #FFFFFF;
			 box-shadow: none;
		}
	}
}


.empty-row {
	font-size: 14px;
    text-align: center;
    margin-top: 5px;

    &.hide {
		display: none;
	}
}


.view-selection {
	padding: 3px 15px;
	background: #E8E8E8;
	font-size: 14px;

	span {
		display: inline-block;
    	text-align: center;
		cursor: pointer;

		i {
			font-size: 12px;
    		margin-right: 3px;
		}

		&:first-child {
			margin-left: 0;
		}

		&:hover {
			color: #49A4C9;
		}
	}

	.view-item-standard {
