		}

		.s-row {
			background-color: sRowColor;

			.title {
				border-color: lighten(sRowColor, 8%);
			}
		}

		.s-minus-row {
			background-color: darken(sRowColor, 10%);

			.title {
				border-color: lighten(sRowColor, 5%);
			}
		}

		.a-plus-row {
			background-color: darken(aRowColor, 15%);

			.title {
				border-color: aRowColor;
			}
		}

		.a-row {
			background-color: aRowColor;

			.title {
				border-color: lighten(aRowColor, 25%);
			}
		}

		.a-minus-row {
			background-color: lighten(aRowColor, 10%);

			.title {
				border-color: lighten(aRowColor, 30%);
			}
		}

		.b-plus-row {
			background-color: lighten(bRowColor, 10%);

			.title {
				border-color: lighten(bRowColor, 25%);
			}
		}

		.b-row {
			background-color: bRowColor;

			.title {
				border-color: lighten(bRowColor, 20%);
			}
		}

		.c-row {
			background-color: cRowColor;

			.title {
				border-color: lighten(cRowColor, 12%);
			}
		}

		.d-row {
			background-color: darken(cRowColor, 10%);

			.title {
				border-color: lighten(cRowColor, 2%);
			}
		}

		.new-row {
			background-color: newRowColor;

			.title {
				border-color: lighten(newRowColor, 20%);
			}
		}
	}

	&.view-standard {
		.view-item-standard {
			font-weight: 600;
			color: #49A4C9;
		}

		.god-icons {
			float: left;
			margin-left: 5px;
		}

		.ss-row {
			width: calc(35% - 5px);
			margin-left: 0;
		}

		.s-plus-row {
			width: 65%;
		}

		.s-row, .a-row, .b-row {
			width: 100%;
			margin-left: 0;
		}

		.s-minus-row {
			width: calc(55% - 5px);
			margin-left: 0
		}

		.a-plus-row {
			width: 45%;
		}

		.a-minus-row {
			width: calc(55% - 5px);
			margin-left: 0;
		}

		.b-plus-row {
			width: 45%;
		}

		.c-row, .d-row {
			width: 40%
			width: calc(40% - 5px);
		}

		.c-row {
			margin-left: 0;
		}

		.new-row {
			width: 20%;
		}
	}

	&.view-compact {
		.view-item-compact {
			font-weight: 600;
			color: #49A4C9;
		}

		.god-icons {
			padding: 0.3rem 4rem 0.3rem 1rem;

