
$main_blue = #49a4c9;


user-select(n) {
	-webkit-touch-callout: n;
	-webkit-user-select: n;
	-moz-user-select: n;
	-ms-user-select: n;
	user-select: n;
}


html {
	box-sizing: border-box;
	height: 100%;
}

*, *:before, *:after {
	box-sizing: inherit;
}

.row {
	max-width: none;

	.row {
		margin: 0 -.5em;
	}
}

body {
	font-family: 'open sans', Helvetica, Arial, sans-serif;
	color: #484848;
	background: #f0f0f0;
	height: 100%;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

h1 {
	text-align: center;
    margin: 0;
    line-height: 1;
    font-size: 20px;
    font-weight: 500;
   	margin-top: -6px;
}

p {
	padding: 20px 16px 0 16px;
    margin: 0;
    font-size: 13px;
    line-height: 1.5;
}

label {
	font-size: 12px;
    font-weight: 600;
}

input[type='text'] {
	font-size: 14px;
    padding: 6px 10px;
    border: 1px solid #D8D8D8;
    transition: all 50ms;

    &:focus {
    	outline: none;
    	border: 1px solid #86BAD1;
    	box-shadow: 0px 0px 1px #84B4C9;
    }
}

/*
 *    Checkboxes and Radio Buttons
 */

/* Checkbox and Radio button general label styles */
input[type='checkbox'] + label, input[type='radio'] + label {
    display: block;
    cursor: pointer;
    position: relative;
    padding-left: 1.5rem;
    font-weight: 400;
    font-size: 14px;

    user-select(none);

    &:before {
        font-family: 'line-icons';
        content: '';
        display: inline-block;

        color: $main_blue;
        background: white;

        position: absolute;
        left: 0;
        top: 3px;

        background: transparent;
    }

    & + input[type='checkbox'] + label, & + input[type='radio'] + label {
        margin-top: 0.5rem;
    }
}

/* Checkbox and Radio button general label styles */
input[type='checkbox'], input[type='radio'] {
    // display: none;
    opacity: 0;
    position: absolute;

    & + label:before {

    }
}

/* Checkbox styles */
input[type='checkbox'] {
    & + label:before {
        width: 16px;
        height: 16px;

        font-size: 10px;
        border: 1px solid $main_blue;

        transition: font-size 60ms;
    }

    &:checked + label:before {
        content: "\e116";
        font-size: 14px;
        text-align: center;
        line-height: 14px;
    }

    &:focus + label:before {
        border: 1px solid darken($main_blue, 15%);
    }
}

/* Radio button styles */
input[type='radio'] {
    & + label:before {
        width: 15px;
        height: 15px;

        border: 3px solid white;
        box-shadow: 0 0 0 1px $main_blue;

        border-radius: 8px;

        transition: border 40ms ease-in-out;
    }

    &:checked + label:before {
        width: 15px;
        height: 15px;
        background: $main_blue;
        border: 2px solid white;
        box-shadow: 0 0 0 1px $main_blue;
    }
}

.text-center {
	text-align: center;
}

.button {
	color: #fff;
	line-height: 25px;
    background-color: #348CB3;
    border: 1px solid #3D809E;
    display: block;
    width: 100px;
    text-align: center;
    border-radius: 3px;
    margin: 0 auto;
    margin-top: 1rem;
    font-size: 14px;
    transition: all 50ms;

	&:hover {
		background-color: #3798C3;
	}

	&:focus {
		outline: none;
	    border: 1px solid #1A4B60;
	}

	&:active {
		background-color: #2B7B9E;
		border: 1px solid #236887;
	}

	&[disabled] {
		opacity: 0.5;
	}

	&.negative {
		background-color: #CF2A66;
		border-color: #A2204F;

		&:hover {
			background-color: #E03070;
		}

		&:focus {
			border-color: #751A3B;
		}

		&:active {
			background-color: #B7255A;
			border-color: #8E1F47;
		}
	}
}

.button-group {
	margin: 0 auto;
	width: 205px;

	.button {
		float: left;
		margin-left: 5px;

		&:first-child {
			margin-left: 0;
		}
	}

	& + p {
		clear: both;
	}
}


.menu-trigger {
	position: absolute;
    right: 0px;
    top: 47px;
    font-size: 22px;
    display: block;
    height: 40px;
    width: 50px;
    line-height: 37px;
    text-align: center;
    opacity: 0.8;
    cursor: pointer;

    &:hover {
		opacity: 1;
	}
}



